#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<BoardWidget>:
    RelativeLayout:
        pos: self.parent.board_offset
        canvas:
            Rectangle:
                source: 'media/41-old-wooden-board.jpg'
                size: self.size
            Color:
                rgba: 0, 0, 0, 1
            Line:
                points: root.gridlines
                width: 2.0
            Color:
                rgba: root.border_colour
                #rgba: 1,1,0,0
            Line:
                #rectangle: root.border_lines
                points: root.border_lines
                joint: 'none'
                width: 10

    GridLayout:
        cols: 2
        size_hint: 1, None
        height: 70
        canvas.before:
            Color:
                rgba: 0, 0, .5, 1
            Rectangle:
                # self here refers to the widget i.e GridLayout
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 4

            Label:
                # TODO: times
                font_size: '30sp'
                value: root.black_time
                text: '0:00'
			Label:
                font_size: '30sp'
                text: root.black_to_move_marker
            Label:
                font_size: '30sp'
                text: root.black_name
            Label:
                font_size: '30sp'
                text: root.black_captures
            Label:
                # TODO: times
                font_size: '30sp'
                value: root.white_time
                text: '0:00'
			Label:
                font_size: '30sp'
                text: root.white_to_move_marker
            Label:
                font_size: '30sp'
                text: root.white_name
            Label:
                font_size: '30sp'
                text: root.white_captures

<Piece>:
	Image:
		id: image
		source: root.source
		center: 0, 0

