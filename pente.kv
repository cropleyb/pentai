<PenteScreen>:
    RelativeLayout:
        pos: self.parent.board_offset
        canvas:
            Rectangle:
                source: 'media/41-old-wooden-board.jpg'
                size: self.size
            Color:
                rgba: 0, 0, 0, 1
            Line:
                points: root.gridlines
                width: 2.0
            Color:
                rgba: root.border_colour
            Line:
                points: root.border_lines
                joint: 'none'
                width: 10

    GridLayout:
        cols: 2
        size_hint: 1, None
        height: 70
        canvas.before:
            Color:
                rgba: 0, 0, .5, 1
            Rectangle:
                # self here refers to the widget i.e GridLayout
                pos: self.pos
                size: self.size
        GridLayout:
            rows: 1

            GridLayout:
                size_hint_x: .3
                cols: 1
                Button:
                    font_size: '30sp'
                    text: "Confirm"
                GridLayout:
                    cols: 2
                    Label:
                        font_size: '15sp'
                        text: 'Required?'
                    ToggleButton:
                        #rgba: 0, 0, .5, 1
                        group: 'confirm_req'
            #GridLayout:
                #cols: 1
                #Button:
                    #font_size: '30sp'
                    #text: "Confirm"
                #GridLayout:
                    #cols: 2
                    #Label:
                        #text: "Required"
                    #CheckBox:
            GridLayout:
                rows: 2
                MyLabel:
                    # TODO: times
                    value: root.black_time
                    text: '0:00'
                MyLabel:
                    text: root.black_to_move_marker
                MyLabel:
                    text: root.black_name
                MyLabel:
                    text: root.black_captures
    
                MyLabel:
                    # TODO: times
                    value: root.white_time
                    text: '0:00'
                MyLabel:
                    text: root.white_to_move_marker
                MyLabel:
                    text: root.white_name
                MyLabel:
                    text: root.white_captures

<Piece>:
    Image:
        id: image
        source: root.source
        center: 0, 0

