<MyCheckBoxList>:
    cols: 2

<MyConfirmPopup>:
    content:
    GridLayout:
        rows: 2
        Label:
            text: root.confirm_prompt
        GridLayout:
            cols: 2
            Button:
                text: "Cancel"
                on_release: root.cancel_confirm()
            Button:
                text: "OK"
                on_release: root.ok_confirm()

<LoadScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: "games"
    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: "New Game"
            on_release: root.app.cancel_game_file_cb()
        Button:
            text: "Load"
            on_release: root.app.load_game_file_cb(filechooser.path, filechooser.selection)


