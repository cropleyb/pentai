#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<BoardWidget>:
    RelativeLayout:
        pos: self.parent.board_offset
        canvas:
            Rectangle:
                source: 'images/41-old-wooden-board.jpg'
                size: self.size
            Color:
                rgba: 0, 0, 0, 1
            Line:
                points: root.gridlines
                width: 2.0

    GridLayout:
        cols: 2
        size_hint: 1, None
        height: 70

        GridLayout:
            cols: 2

            Label:
                # TODO: times
                font_size: '30sp'
                value: root.player1time
                text: '0:00'
            Label:
                font_size: '30sp'
                text: root.player1
            Label:
                # TODO: times
                font_size: '30sp'
                value: root.player2time
                text: '0:00'
            Label:
                font_size: '30sp'
                text: root.player2

<Piece>:
	Image:
		id: image
		source: root.source
		center: 0, 0

