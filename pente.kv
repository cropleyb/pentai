<PenteScreen>:
    RelativeLayout:
        pos: self.parent.board_offset
        canvas:
            Rectangle:
                source: 'media/41-old-wooden-board.jpg'
                size: self.size
            Color:
                rgba: 0, 0, 0, 1
            Line:
                points: root.gridlines
                width: 2.0
            Color:
                rgba: root.border_colour
            Line:
                points: root.border_lines
                joint: 'none'
                width: 6

    GridLayout:
        cols: 2
        size_hint: 1, None
        height: root.board_offset[1]
        canvas.before:
            Color:
                rgba: 0, 0, .5, 1
            Rectangle:
                # self here refers to the widget i.e GridLayout
                pos: self.pos
                size: self.size
        GridLayout:
            rows: 1

            GridLayout:
                size_hint_x: .3
                rows: 3
                ToggleButton:
                    font_size: '20sp'
                    text: root.confirm_status
                    #on_press: root.confirm() # Why isn't this working?
                ToggleButton:
                    font_size: '20sp'
                    text: "Back"
                ToggleButton:
                    font_size: '20sp'
                    text: "Forward"
            GridLayout:
                rows: 2
                # TODO: duplication
                MyLabel:
                    # TODO: times
                    # TODO: BLACK/WHITE
                    text: root.player_time[1]
                MyLabel:
                    text: root.player_status[1]
                MyLabel:
                    text: root.player_name[1]
                MyLabel:
                    text: root.player_captures[1]
    
                MyLabel:
                    # TODO: times
                    text: root.player_time[2]
                MyLabel:
                    text: root.player_status[2]
                MyLabel:
                    text: root.player_name[2]
                MyLabel:
                    text: root.player_captures[2]

<Piece>:
    Image:
        id: image
        source: root.source
        center: 0, 0

